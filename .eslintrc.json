{
  "extends": ["eslint:recommended", "angular", "airbnb-base"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "no-bitwise": ["error", { "allow": ["<<", ">>", "&", "|"] }],
    "no-unused-vars": [0],
    "no-param-reassign": [0],
    "angular/no-cookiestore": [0],
    "max-len": ["error", 140]
  }
}
